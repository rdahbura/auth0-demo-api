{
  "name": "auth0-demo-api",
  "version": "1.0.0",
  "license": "MIT",
  "description": "Auth0 demo API.",
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
    "format": "prettier --write './src/**/*.{js,jsx,ts,tsx,json,css,scss,md}'",
    "debug": "yarn run build && concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn run debug:build\" \"yarn run debug:start\"",
    "debug:build": "tsc -w",
    "debug:start": "nodemon build/index.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-jwt": "^5.3.3",
    "express-validator": "^6.4.0",
    "helmet": "^3.22.0",
    "jwks-rsa": "^1.8.0",
    "mongodb": "^3.5.6",
    "morgan": "^1.10.0",
    "node-fetch": "^2.6.0",
    "pg": "^8.0.3",
    "throng": "^4.0.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/helmet": "^0.0.45",
    "@types/mongodb": "^3.5.11",
    "@types/morgan": "^1.9.0",
    "@types/node": "^13.13.2",
    "@types/node-fetch": "^2.5.7",
    "@types/pg": "^7.14.3",
    "@types/request": "^2.48.4",
    "@types/throng": "^4.0.2",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "concurrently": "^5.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.5",
    "ts-node": "^8.9.0",
    "typescript": "^3.8.3"
  },
  "engines": {
    "node": "12",
    "yarn": "1"
  },
  "eslintConfig": {
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "prettier/@typescript-eslint"
    ],
    "parser": "@typescript-eslint/parser",
    "rules": {
      "@typescript-eslint/camelcase": "off"
    }
  },
  "prettier": {
    "arrowParens": "always",
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  }
}
