{
  "name": "auth0-demo-api",
  "version": "1.0.0",
  "license": "MIT",
  "description": "Auth0 demo API.",
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
    "debug": "yarn run build && concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn run debug:build\" \"yarn run debug:start\"",
    "debug:build": "tsc -w",
    "debug:start": "nodemon build/index.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-jwt": "^5.3.1",
    "jwks-rsa": "^1.6.0",
    "morgan": "^1.9.1",
    "pg": "^7.12.1",
    "request": "^2.88.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.1",
    "@types/morgan": "^1.7.37",
    "@types/node": "^12.7.12",
    "@types/pg": "^7.11.2",
    "@types/request": "^2.48.3",
    "@typescript-eslint/eslint-plugin": "^2.4.0",
    "@typescript-eslint/parser": "^2.4.0",
    "concurrently": "^5.0.0",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "nodemon": "^1.19.3",
    "prettier": "^1.18.2",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.4"
  },
  "engines": {
    "node": "10",
    "yarn": "1.19"
  },
  "eslintConfig": {
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "prettier/@typescript-eslint"
    ],
    "parser": "@typescript-eslint/parser",
    "rules": {
      "@typescript-eslint/camelcase": "off"
    }
  },
  "prettier": {
    "arrowParens": "always",
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  }
}
