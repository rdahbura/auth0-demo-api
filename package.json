{
  "name": "auth0-demo-api",
  "version": "1.0.0",
  "license": "MIT",
  "description": "Auth0 demo API.",
  "repository": {
    "type": "git",
    "url": "https://github.com/rdahbura/auth0-demo-api.git"
  },
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
    "format": "prettier --write './src/**/*.{js,jsx,ts,tsx,json,css,scss,md}'",
    "debug": "yarn run build && concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn run debug:build\" \"yarn run debug:start\"",
    "debug:build": "tsc -w",
    "debug:start": "nodemon build/index.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "express-jwt-authz": "^2.4.1",
    "express-validator": "^6.11.1",
    "helmet": "^4.6.0",
    "jwks-rsa": "^2.0.3",
    "mongodb": "^3.6.8",
    "morgan": "^1.10.0",
    "node-fetch": "^2.6.1",
    "pg": "^8.6.0",
    "throng": "^5.0.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/mongodb": "^3.6.16",
    "@types/morgan": "^1.9.2",
    "@types/node": "^15.6.1",
    "@types/node-fetch": "^2.5.10",
    "@types/pg": "^8.6.0",
    "@types/request": "^2.48.5",
    "@types/throng": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "concurrently": "^6.2.0",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.0",
    "ts-node": "^10.0.0",
    "typescript": "^4.2.4"
  },
  "engines": {
    "node": "14",
    "yarn": "1"
  },
  "eslintConfig": {
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "rules": {
      "@typescript-eslint/camelcase": "off"
    }
  },
  "prettier": {
    "arrowParens": "always",
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  }
}
